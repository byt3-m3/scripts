#!/bin/bash
if [ -z "$1" ]
then	echo "Please Enter a command for git like gc or fsck. This command will be executed on each git project found starting from the current working directory"
	exit 1
fi

find . -name '.git'|while read gitdir
do	dir=${gitdir%.git}
	pushd "$dir"
	git "$1"
	popd >/dev/null
done
